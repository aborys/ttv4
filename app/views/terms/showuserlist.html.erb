<% if user_signed_in? %>
<div class="navbar">
	<nav class="navbar-inner">
		<div class="container">
			<%= render 'layouts/navigation_menu' %>
		</div>
	</nav>
</div>
<% end %>

<div class="container">
	<div class="content">
		<div class="row">
			<div class="span2">
				<%= render :partial => 'layouts/left_menu' %>
			</div>
			<div class="span10">
				<h4>Search data</h4>

				<table class="table table-striped">
					<thead>
						<tr>
							<th>User id</th>
							<th>Name</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><%= @user['user_id'] %></td>
							<td><%= @user['name'] %></td>
						</tr>
					</tbody>
				</table>

				<% if @tweets %>
				<h4>List of tweets</h4>
				<table class="table table-striped">
					<thead>
						<tr>
							<th width="10%">Tweeted at</th>
							<th width="10%">User</th>
							<th width="10%">Gender</th>
							<th width="50%">Text</th>
							<th width="5%">lang</th>
							<th width="10%">Location</th>
							<th width="5%">Lead</th>
						</tr>
					</thead>
					<tbody>
						<% @tweets.each do |tweet| %>
						<tr>
							<td><%= tweet.tweeted_at.to_date %></td>
							<td><%= tweet.username %></td>
							<td><%= tweet.gender %></td>
							<td><%= tweet.text %></td>
							<td><%= tweet.lang %></td>
							<td><%= tweet.location %></td>
							<td><%= tweet.lead %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
				<% end %>
			</div>
		</div>
	</div>
</div>

