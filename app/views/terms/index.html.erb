<div class="container-fluid">
	<div class="row-fluid">
		<div class="span10">
			<h3>Terms</h3>
		</div>
		<div class="span2">
			<%= link_to "+ New", new_term_path, :class=>"btn" %>
		</div>
		<div class="span8">
			<table id="table_report" class="table table-striped table-bordered table-hover">			
				<thead>
					<tr>
						<th>Description</th>
						<th>Keywords</th>
						<th>
							<i class="icon-time"></i>
							Creation date
						</th>						
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% my_terms.each do |term| %>
					<tr>
						<td><%= link_to term.description, term %></td>
						<td><%= term.keywords %></td>
						<td><%= term.created_at.to_date %></td>
						<td class="td-actions">
							<div class="hidden-phone visible-desktop btn-group">								
								<%= link_to raw("#{'<i class="icon-edit bigger-120"></i>'}"), edit_term_path(term), :class => 'btn btn-mini btn-info'%>
								<%= link_to(raw("#{'<i class="icon-trash bigger-120"></i>'}"), term_path(term), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini btn-danger') %>
								<%= link_to raw("#{'<i class="icon-flag bigger-120"></i>'}"), showlist_term_path(term), :class => 'btn btn-mini btn-warning'%>
							</div>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(function() {
		var oTable1 = $('#table_report').dataTable( {
		"aoColumns": [	      
	      null, null,null,
		  { "bSortable": false }
		] } );		
	})
</script>
