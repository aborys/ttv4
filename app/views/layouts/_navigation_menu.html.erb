<ul class="nav">
	<li>
		<div class="btn-group">
			<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
				Choose a marketing campaign <span class="caret"></span>
			</button>
			<ul class="dropdown-menu" role="menu">
				<% my_terms.each do |term| %>
				<li>
					<%= link_to term.description, showlist_term_path(term.id) %>
				</li>
				<% end %>
				<li class="divider"></li>
				<li>
					<%= link_to 'my Terms', terms_path %>
				</li>
			</ul>
		</div>
	</li>
</ul>

<form class="navbar-form navbar-right" role="search">
	<ul class="nav">
		<li>
			<p class="nav navbar-text">
				Filters:
			</p>
		</li>
		<li>
			<%= select("post", "location_key", Filter.where(:type => "location").collect {|p| [ p.value, p.key ] }, {include_blank: 'All'}, {prompt: 'Select location'}) %>
		</li>
		<li>
			<%= select("post", "gender_key", Filter.where(:type => "gender").collect {|p| [ p.value, p.key ] }, {include_blank: 'All'}, {prompt: 'Select gender'}) %>
		</li>
		<li>
			<div class="input-daterange" data-behaviour='datepicker' id="datepicker">
				<span class="add-on">from</span>
				<input type="text" class="input-small" name="from" value="<%= @from %>"/>
				<span class="add-on">to</span>
				<input type="text" class="input-small" name="to" value="<%= @to %>"/>
				<button type="submit" class="btn btn-default">
					Submit
				</button>
				<script type="text/javascript">
					$(document).ready(function() {
						$('[data-behaviour~=datepicker]').datepicker({
							format : "dd-mm-yyyy",
							weekStart : 1,
							autoclose : true,
							todayHighlight : true
						});
					})
				</script>
			</div>
		</li>
	</ul>
</form>

