<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><%= content_for?(:title) ? yield(:title) : "Twittermómetro" %></title>
		<meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Ttv4" %>">
		<%= stylesheet_link_tag "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
		<%= yield(:head) %>
	</head>
	<body class="<%= controller_name %> <%= action_name %>">
		<div class="navbar navbar-inverse navbar-fixed-top">
			<nav class="navbar-inner">
				<div class="container">
					<%= render 'layouts/navigation' %>
				</div>
			</nav>
		</div>
		<% if user_signed_in? %>
		<div class="navbar">
			<nav class="navbar-inner">
				<div class="container">
					<%= render 'layouts/navigation_menu' %>
				</div>
			</nav>
		</div>
		<% end %>
		<div id="main" role="main">
			<div class="container">
				<div class="content">
					<div class="row">
						<div class="span12">
							<%= render 'layouts/messages' %>
							<%= yield %>
						</div>
					</div>
					<footer>
						<div class="container">
							<p class="muted credit">
								<b>Twittermómetro Beta Version</b>. Please use this platform as a proof of concept. Visit our <a href="http://twittermometro.com">project site</a> and our <a href="http://blog.twittermometro.com">blog</a> for more info.
							</p>
						</div>
					</footer>
				</div>
			</div>
			<!--! end of .container -->
		</div>
		<!--! end of #main -->
	</body>
</html>
